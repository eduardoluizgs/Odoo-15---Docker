{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "odoo-run",
      "options": {
        "cwd": "${workspaceFolder}/"
      },
      "command": "make",
      "args": [
        "run"
      ],
      "type": "shell",
      // This task is run before some debug tasks.
      // Problem is, it's a watch script, and since it never exits, VSCode
      // complains. All this is needed so VSCode just lets it run.
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    },
